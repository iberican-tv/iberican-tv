---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { title = "Iberican" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/logoarriba_I.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Bebas+Neue&family=Oswald:wght@600;800&display=swap" rel="stylesheet">
    <style>
      :root { --ui-font: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; --heading-font: 'Poppins', var(--ui-font); }
      body { font-family: var(--ui-font); }
      h1, h2, h3, h4 { font-family: var(--heading-font); }
    </style>
  </head>
  <body>
    <div id="custom-cursor"></div>
    <Header />
    <main class="px-6 py-8 pt-32">
      <slot />
    </main>
    <Footer />
    
    <style>
      * {
        cursor: none !important;
      }
      
      @keyframes sword-glow {
        0%, 100% {
          filter: brightness(1.4) drop-shadow(0 0 15px rgba(220, 38, 38, 0.8)) drop-shadow(0 0 30px rgba(220, 38, 38, 0.6));
        }
        50% {
          filter: brightness(1.6) drop-shadow(0 0 25px rgba(220, 38, 38, 1)) drop-shadow(0 0 40px rgba(220, 38, 38, 0.8)) drop-shadow(0 0 50px rgba(220, 38, 38, 0.5));
        }
      }
      
      #custom-cursor {
        position: fixed;
        width: 350px;
        height: 80px;
        background-image: url('/espada_cursor_inclinada.png');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: right center;
        pointer-events: none;
        z-index: 9999;
        transform: translate(-85%, -50%);
        display: none;
        animation: sword-glow 2s ease-in-out infinite;
      }
    </style>
    
    <script>
      const customCursor = document.getElementById('custom-cursor');
      
      document.addEventListener('mousemove', (e) => {
        customCursor.style.display = 'block';
        customCursor.style.left = e.clientX + 'px';
        customCursor.style.top = e.clientY + 'px';
      });
      
      document.addEventListener('mouseleave', () => {
        customCursor.style.display = 'none';
      });
    </script>
  </body>
</html>